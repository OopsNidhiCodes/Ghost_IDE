# GhostIDE Backend Configuration
# Copy this file to .env and update with your actual values

# Database Configuration (SQLite for local development - no setup needed)
DATABASE_URL=sqlite+aiosqlite:///./ghost_ide.db

# Redis Configuration (Optional - will use in-memory fallback if not available)
REDIS_URL=redis://localhost:6379

# Google Gemini API Configuration (Required for Ghost AI chat)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Ghost AI Configuration
GHOST_AI_MODEL=gemini-2.0-flash
GHOST_AI_TEMPERATURE=0.7
GHOST_AI_MAX_TOKENS=500

# Security
SECRET_KEY=your-super-secret-key-here

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Code Execution Settings
CODE_EXECUTION_TIMEOUT=30
MAX_CONCURRENT_EXECUTIONS=10

# Session Settings
SESSION_TIMEOUT_MINUTES=60

# Development
DEBUG=true